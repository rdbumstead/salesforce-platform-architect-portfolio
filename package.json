{
  "name": "salesforce-architect-portfolio",
  "private": true,
  "version": "1.0.0",
  "description": "Salesforce Platform Architect Portfolio",
  "scripts": {
    "setup:plugins": "sf plugins install @salesforce/plugin-code-analyzer sfdx-git-delta",
    "lint": "eslint **/{aura,lwc}/**/*.js",
    "test": "npm run test:unit",
    "test:unit": "sfdx-lwc-jest",
    "test:unit:watch": "sfdx-lwc-jest --watch",
    "test:unit:debug": "sfdx-lwc-jest --debug",
    "test:unit:coverage": "sfdx-lwc-jest --coverage",
    "prettier": "prettier --write \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "prettier:verify": "prettier --check \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "prepare": "husky || true",
    "precommit": "lint-staged",
    "clean": "rimraf changed",
    "scan": "sf code-analyzer run --target packages --output-file scan-results.html --severity-threshold 2",
    "delta": "npm run clean && shx mkdir -p changed && sf sgd source delta --to HEAD --from origin/main --output-dir changed --source-dir packages --generate-delta",
    "scan:security": "snyk test",
    "scan:secrets": "secretlint --maskSecrets \"packages/**/*.{cls,trigger,js,xml,yaml,yml}\" \"docs/**/*.md\" \"scripts/**/*.js\"",
    "sf:coverage": "sf apex run test --code-coverage --coverage-requirement 75 --result-format human --wait 10",
    "sf:validate": "sf project deploy validate --source-dir packages --test-level RunLocalTests",
    "test:lighthouse": "lhci autorun",
    "delta:validate": "node scripts/validate.js",
    "docs:api": "node scripts/generate-api-docs.js",
    "docs:verify": "npm run docs:api && git diff --exit-code docs/api/oas/ && echo \"SUCCESS: API Documentation is synchronized.\"",
    "pre-launch-check": "node scripts/pre-launch-check.js"
  },
  "devDependencies": {
    "@lhci/cli": "^0.13.0",
    "@lwc/eslint-plugin-lwc": "^3.3.0",
    "@prettier/plugin-xml": "^3.4.1",
    "@salesforce/eslint-config-lwc": "^4.1.1",
    "@salesforce/eslint-plugin-aura": "^3.0.0",
    "@salesforce/eslint-plugin-lightning": "^2.0.0",
    "@salesforce/sfdx-lwc-jest": "^7.0.2",
    "@secretlint/secretlint-rule-pattern": "^11.2.5",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "eslint": "^9.29.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^29.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "openapi-types": "^12.1.3",
    "prettier": "^3.5.3",
    "prettier-plugin-apex": "^2.2.6",
    "rimraf": "^5.0.0",
    "secretlint": "^6.2.4",
    "shx": "^0.3.4",
    "snyk": "^1.1301.2",
    "widdershins": "^4.0.1"
  },
  "lint-staged": {
    "**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}": [
      "prettier --write"
    ],
    "**/{aura,lwc}/**/*.js": [
      "eslint"
    ],
    "**/lwc/**": [
      "sfdx-lwc-jest -- --bail --findRelatedTests --passWithNoTests"
    ],
    "**/*.{cls,trigger,js,xml,yaml,yml,md}": [
      "secretlint --maskSecrets"
    ],
    "packages/integration-api/specs/**/*.yaml": [
      "npm run docs:api"
    ]
  }
}
