<apex:page
  id="loginPage"
  controller="CommunitiesLoginController"
  title="{!$Label.site.site_login}"
>
  <!-- Use JS to redirect to auth page to avoid PMD VfCsrf violation -->
  <script>
    window.onload = function () {
      // This relies on the standard controller logic which we can't invoke directly via action
      // but for a placeholder login page, we can redirect to the login URL
      window.location.href = "{!$Site.Prefix}/AppLogin";
    };
  </script>
</apex:page>
