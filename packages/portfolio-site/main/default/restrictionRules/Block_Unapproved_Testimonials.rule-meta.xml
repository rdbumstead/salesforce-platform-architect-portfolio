<?xml version="1.0" encoding="UTF-8" ?>
<RestrictionRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <description
  >Restricts visibility to Approved testimonials for any user who does NOT have the 'View_Unapproved_Testimonials_PS' permission set (e.g., Guest Users).</description>
    <enforcementType>Restrict</enforcementType>
    <masterLabel>Block_Unapproved_Testimonials</masterLabel>
    <recordFilter>Approved__c = true</recordFilter>
    <targetEntity>Testimonial__c</targetEntity>
    <userCriteria
  >PermissionSetAssignment.PermissionSet.Name != 'View_Unapproved_Testimonials_PS'</userCriteria>
    <version>1</version>
</RestrictionRule>
